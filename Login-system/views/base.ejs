   <div class="tex-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
          <h2 class="font-weight-bold text-white text-center">Login System</h2>
          <span class="text-white text-center">Log in for the existing user</span>
          <%if(locals.logout){%>
            <div class="alter alter-success text-center text-white">
             <%=logout%>
            </div>

          <%}%>
        </div>
        <form action="/route/login" method="POST" class="pt-3">
          <div class="form-group">
            <input type="email" class="form-control" placeholder="email" name="email">
            <small class="form-text text-left text-white">Register email address</small>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="password">
          </div>
          <br>
          <button type="submit" class="btn btn-success rounded-pill text-white">Submit</button>
        </form>
    </div>
   </div>




